#include<stdio.h>
#include <stdlib.h>
int main()
{   
    int a[1000][1000],n,b[1000][1000],x=1,c=0,i,j;
scanf("%d",&n); 
for(j=0;j<n;j++)   
{   
    for(i=0;i<n;i++)  
    {      
        scanf("%d",&a[i][j]);  
        } 
        }  
        for(j=0;j<n;j++) 
        {    
            for(i=0;i<n;i++)   
            {      
                if(j%2==0) 
                {      
                    b[i][j]=x; 
                    x++;   
                    }       
                   if(j%2==1) 
                    {       
                        x--; 
                        b[i][j]=x;  
                        }   
                        }   
                        x=x+n;
                        }  
                        for(i=0;i<n;i++)  
                        {   
                            for(j=0;j<n;j++) 
                            {    
                                if(a[j][i]!=b[i][j]) 
                                { 
                                    c=1; 
                                    break;   
                                    }   
                                    }  
                                    }   
                                    if(c==1) 
                                    printf("No"); 
                                    else  
                                    printf("Yes");    return 0;
}bd
